<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Choose.ChooseActivity">
    <RelativeLayout
        android:background="#56abe4"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:text="商店列表"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linershop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/sd"
            android:layout_width="200dp"
            android:layout_height="100dp"></ImageView>
        <LinearLayout
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/shop_bianhao"
                android:text="商店编号：001"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"></TextView>
            <View
                android:background="#56abe4"
                android:layout_width="match_parent"
                android:layout_height="1px"></View>
            <TextView
                android:text="商店地址：无锡市滨湖区"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"></TextView>
            <View
                android:background="#56abe4"
                android:layout_width="match_parent"
                android:layout_height="1px"></View>
            <TextView
                android:text="商店电话：178203040404"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"></TextView>
            <View
                android:background="#56abe4"
                android:layout_width="match_parent"
                android:layout_height="1px"></View>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>